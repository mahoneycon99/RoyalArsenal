<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>RA_MonoBow</defName>
    <label>mono-longbow</label>
    <description>An experimental magnetic-assisted longbow. Special armor-piercing arrows are loaded through the back where housed mechanites sharpen the arrow to a mono-molecular edge. When released, the arrow is accelerated almost entirely by a powerful electromagnetic coil.</description>
    <graphicData>
      <texPath>Things/Items/Equipment/WeaponRanged/MonoLongbow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Large</soundInteract>
    <costList>
      <Plasteel>50</Plasteel>
	  <Uranium>20</Uranium>
	  <ComponentSpacer>6</ComponentSpacer>
    </costList>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>70000</WorkToMake>
      <Mass>4.0</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>0.85</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>SpacerGun</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedHeavy</li>
      <li>Ultratech</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RA_Arrow_Mono</defaultProjectile>
        <warmupTime>3.0</warmupTime>
        <range>49.9</range>
        <soundCast>ChargeLance_Fire</soundCast>
        <muzzleFlashScale>0</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>RA_MonoBowResearch</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>RA_Arrow_Mono</defName>
    <label>mono arrow</label>
    <graphicData>
      <texPath>Things/Projectiles/Arrow_Mono</texPath>
