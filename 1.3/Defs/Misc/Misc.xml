<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseGas">
    <defName>RA_Chaff</defName>
    <label>chaff</label>
    <graphicData>
      <texPath>Things/Misc/Chaff</texPath>
      <drawSize>2.2</drawSize>
    </graphicData>
    <gas>
      <expireSeconds>19~21</expireSeconds>
      <blockTurretTracking>true</blockTurretTracking>
      <accuracyPenalty>0</accuracyPenalty>
      <rotationSpeed>10</rotationSpeed>
    </gas>
  </ThingDef>

  <HediffDef ParentName = "PsycastHediffBase">
    <defName>RA_CloakingField</defName>
    <label>cloaking field</label>
    <description>An advanced cloaking field generated by high-power Ranseur Armor. Light bends around the wearer, distorting their visual appearance and making them difficult to target.</description>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties">
        <compClass>HediffComp_Invisibility</compClass>
      </li>
    </comps>
  </HediffDef>
</Defs>